    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="2.0dip" android:color="@color/grey" />

            <solid android:color="@color/middle_orange" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="2.0dip" android:color="@color/grey" />

            <solid android:color="@color/middle_orange" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="2.0dip" android:color="@color/grey" />

            <solid android:color="@color/nearly_white" />
        </shape></item>

</selector>